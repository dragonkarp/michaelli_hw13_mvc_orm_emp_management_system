<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <ul>
                {{#each burgerData}}
                {{#unless devoured}}
                <li>
                    {{burger_name}} <button class="devoured-btn" data-id={{id}}>DEVOUR</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
                {{#each burgerData}}
                {{#if devoured}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}
        </div>
    </div>
</div>

<form action="/api/burgers" method="POST">
<input type="text" name="burger_name">
<button>ADD BURGER</button>
</form>